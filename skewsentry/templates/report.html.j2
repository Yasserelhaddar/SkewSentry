<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>SkewSentry Report</title>
    <style>
      body { font-family: system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif; margin: 24px; }
      table { border-collapse: collapse; width: 100%; margin-top: 12px; }
      th, td { border: 1px solid #ddd; padding: 8px; text-align: left; }
      th { background: #f7f7f7; }
      .ok { color: #0a7d00; }
      .fail { color: #b00020; }
      .section { margin: 16px 0; }
      code { background: #f4f4f4; padding: 2px 4px; border-radius: 3px; }
    </style>
  </head>
  <body>
    <h1>SkewSentry Report</h1>
    <p>Status: <strong class="{{ 'ok' if report.ok else 'fail' }}">{{ 'PASS' if report.ok else 'FAIL' }}</strong></p>
    <div class="section">
      <h3>Summary</h3>
      <p>Keys: <code>{{ report.keys | join(', ') }}</code></p>
      <p>Missing rows â€” offline: {{ report.alignment.missing_in_offline_count }}, online: {{ report.alignment.missing_in_online_count }}</p>
      {% if json_href %}<p>Raw JSON: <a href="{{ json_href }}">{{ json_href }}</a></p>{% endif %}
    </div>

    <div class="section">
      <h3>Per-feature</h3>
      <table>
        <thead>
          <tr>
            <th>Feature</th>
            <th>Mismatch rate</th>
            <th>Rows compared</th>
            <th>Mean abs diff</th>
            <th>Unknown categories</th>
          </tr>
        </thead>
        <tbody>
          {% for r in report.per_feature %}
          <tr>
            <td>{{ r.feature_name }}</td>
            <td>{{ '%.4f' % r.mismatch_rate }}</td>
            <td>{{ r.num_rows_compared }}</td>
            <td>{{ r.mean_absolute_difference if r.mean_absolute_difference is not none else '' }}</td>
            <td>
              {% if r.unknown_categories %}
                offline: {{ r.unknown_categories.offline_unknown | default([]) | join(', ') }},
                online: {{ r.unknown_categories.online_unknown | default([]) | join(', ') }}
              {% endif %}
            </td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </body>
  </html>

